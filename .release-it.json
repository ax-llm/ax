{
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "web": true,
    "autoGenerate": true,
    "releaseName": "Release ${version}",
    "releaseNotes": true,
    "assets": ["build/*.zip"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md"
    }
  }
}
